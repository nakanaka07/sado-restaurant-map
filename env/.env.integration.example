# 統合環境設定例
# このファイルをコピーして .env.integration を作成してください

# ===== Redis設定 =====
REDIS_PASSWORD=your_redis_password_here
REDIS_CLUSTER_NODES=redis-master-1:7001,redis-master-2:7002,redis-master-3:7003

# ===== Celery設定 =====
CELERY_BROKER_URL=redis://redis-master-1:7001/0
CELERY_RESULT_BACKEND=redis://redis-master-1:7001/0
ENVIRONMENT=integration

# ===== アプリケーション設定 =====
NODE_ENV=integration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===== 監視設定 =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ===== セキュリティテスト設定 =====
SONAR_TOKEN=your_sonar_token_here
SONAR_HOST_URL=http://sonarqube:9000

# ===== データベース設定 =====
POSTGRES_DB=sonar
POSTGRES_USER=sonar
POSTGRES_PASSWORD=your_postgres_password_here

# ===== ログ設定 =====
LOG_LEVEL=INFO
ELASTICSEARCH_URL=http://elasticsearch:9200

# ===== テスト設定 =====
TEST_MODE=integration
TEST_TIMEOUT=600
LOAD_TEST_USERS=10
LOAD_TEST_DURATION=120

# ===== パフォーマンス設定 =====
WORKER_CONCURRENCY=2
MAX_WORKERS=4
TASK_TIME_LIMIT=300

# ===== ネットワーク設定 =====
NETWORK_NAME=sado-integration-network
SUBNET=172.20.0.0/16
