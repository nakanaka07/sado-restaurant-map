{
  // === 佐渡飲食店マップ - プロジェクト固有設定 ===
  // React 19 + TypeScript 5.7 + Vite 7 + Google Maps
  // === TypeScript 5.7 プロジェクト最適化 ===
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.workspaceSymbols.scope": "currentProject",
  "typescript.preferences.includeCompletionsForModuleExports": true,
  "typescript.preferences.allowRenameOfImportPath": true,
  "typescript.surveys.enabled": false,
  "typescript.suggest.objectLiteralMethodSnippets.enabled": true,
  // Inlay Hints（最小限・パフォーマンス重視）
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  // === React & ESLint プロジェクト設定 ===
  "emmet.includeLanguages": {
    "typescript": "typescriptreact",
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // === プロジェクトファイル管理 ===
  "files.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.cache/**": true,
    "**/htmlcov/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/pnpm-lock.yaml": true,
    "**/htmlcov/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true
  },
  // === テスト・デバッグ設定 ===
  "debug.inlineValues": "auto",
  "debug.toolBarLocation": "floating",
  "testing.automaticallyOpenPeekView": "never",
  "testing.defaultGutterClickAction": "run",
  "vitest.enable": true,
  "vitest.commandLine": "corepack pnpm test",
  // パッケージマネージャの既定を pnpm に固定
  "npm.packageManager": "pnpm",
  // === GitHub Copilot プロジェクト最適化 ===
  "github.copilot.chat.instructions": "docs/ai-assistant/copilot-instructions.md",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "yaml": true,
    "json": true,
    "jsonc": true,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {
    "inlineSuggestEnable": true,
    "length": 800,
    "temperature": 0.1,
    "top_p": 1,
    "listCount": 3
  },
  "github.copilot.chat.followups": "onDemand",
  "github.copilot.chat.localeOverride": "ja",
  // === MCP (Model Context Protocol) サーバー設定 ===
  // 佐渡飲食店マッププロジェクト用最適化済み設定
  // 重複警告対策：競合するツールを統合・最適化
  // コア開発ツール（必須）
  "mcp.servers.github": {
    "url": "https://api.githubcopilot.com/mcp/",
    "description": "GitHub統合管理（Issues・PR・リポジトリ）",
    "priority": "high",
    "enabled": true
  },
  "mcp.servers.microsoft-docs": {
    "url": "https://learn.microsoft.com/api/mcp",
    "description": "技術文書・API参照",
    "priority": "medium",
    "enabled": true
  },
  // データ分析・処理（data-platform連携）
  "mcp.servers.duckdb": {
    "command": "uvx",
    "args": [
      "mcp-server-duckdb",
      "--db-path",
      "./data-platform/data/analytics.duckdb"
    ],
    "description": "ローカルデータ分析・SQL実行",
    "priority": "medium",
    "enabled": false,
    "enabledWhen": "data-analysis"
  },
  // 生産性ツール（最小限・重複回避）
  "mcp.servers.sequential-thinking": {
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
    "description": "タスク分解・計画管理",
    "priority": "low",
    "enabled": true
  },
  // === MCP競合回避・優先度設定 ===
  "mcp.serverPriority": {
    "github": 100,
    "microsoft-docs": 80,
    "sequential-thinking": 60,
    "duckdb": 40
  },
  "mcp.conflictResolution": "priority",
  "mcp.toolOverlapHandling": "merge",
  // === ファイル形式別プロジェクト設定 ===
  "[typescript]": {
    "editor.rulers": [80, 120],
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.rulers": [80, 120],
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.rulers": [120],
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // === Markdown Lint プロジェクト設定 ===
  "markdownlint.config": {
    "MD046": {
      "style": "fenced"
    },
    "MD040": false,
    "MD024": false,
    "MD013": {
      "line_length": 120
    },
    "MD001": false
  },
  // === プロジェクトセキュリティ設定 ===
  "security.workspace.trust.untrustedFiles": "prompt",
  // === Python環境（data-platform専用） ===
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "python.analysis.typeCheckingMode": "standard",
  "python.defaultInterpreterPath": "${workspaceFolder}/data-platform/.venv/Scripts/python.exe",
  "python.formatting.provider": "black",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["data-platform/tests"]
}
