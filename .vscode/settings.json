{
  // === 佐渡飲食店マップ - VS Code 設定 ===
  // React 19 + TypeScript 5.7 + Vite 7 + Google Maps

  // === TypeScript 5.7 最適化 ===
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.workspaceSymbols.scope": "currentProject",
  "typescript.preferences.includeCompletionsForModuleExports": true,
  "typescript.preferences.allowRenameOfImportPath": true,
  "typescript.surveys.enabled": false,
  "typescript.suggest.objectLiteralMethodSnippets.enabled": true,

  // Inlay Hints（最小限・パフォーマンス重視）
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,

  // === React & ESLint & Prettier ===
  "emmet.includeLanguages": {
    "typescript": "typescriptreact",
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // === ファイル管理 ===
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.cache": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/pnpm-lock.yaml": true
  },

  // === エディタ最適化 ===
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.parameterHints.enabled": true,

  // 2025年新機能
  "editor.experimental.pasteActions.enabled": true,
  "editor.experimental.asyncTokenization": true,

  // === Git・デバッグ・テスト ===
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "debug.inlineValues": "auto",
  "debug.terminal.clearBeforeReusing": true,
  "debug.toolBarLocation": "floating",
  "testing.automaticallyOpenPeekView": "never",
  "testing.defaultGutterClickAction": "run",
  "vitest.enable": true,
  "vitest.commandLine": "pnpm test",

  // === GitHub Copilot 2025最適化 ===
  "github.copilot.chat.instructions": "docs/ai-assistant/copilot-instructions.md",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "yaml": true,
    "json": true,
    "jsonc": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {
    "inlineSuggestEnable": true,
    "length": 800,
    "temperature": 0.1,
    "top_p": 1,
    "listCount": 3
  },
  "github.copilot.chat.followups": "onDemand",
  "github.copilot.chat.localeOverride": "ja",

  // === ファイル形式別設定 ===
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80, 120]
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80, 120]
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": { "strings": true }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "editor.rulers": [120]
  },

  // === その他設定 ===
  "markdownlint.config": {
    "MD046": { "style": "fenced" },
    "MD040": false,
    "MD024": false,
    "MD013": { "line_length": 120 },
    "MD001": false
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.editor.enablePreview": false,
  "security.workspace.trust.untrustedFiles": "prompt",
  "python-envs.defaultEnvManager": "ms-python.python:system",
  "python-envs.pythonProjects": []
}
