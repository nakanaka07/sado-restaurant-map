{
  "dashboard": {
    "id": null,
    "title": "佐渡飲食店マップ ビジネス分析ダッシュボード",
    "description": "店舗データ分析・利用統計・品質指標",
    "tags": ["business", "analytics", "kpi"],
    "timezone": "Asia/Tokyo",
    "refresh": "5m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "📈 店舗データ処理統計",
        "type": "stat",
        "targets": [
          {
            "expr": "restaurant_total_processed",
            "legendFormat": "総処理数"
          },
          {
            "expr": "restaurant_successful_processed",
            "legendFormat": "成功処理数"
          },
          {
            "expr": "restaurant_data_quality_score_avg",
            "legendFormat": "品質スコア"
          }
        ],
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short"
          }
        }
      },

      {
        "id": 2,
        "title": "🗾 地域別店舗分布",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (region) (restaurant_count_by_region)",
            "legendFormat": "{{region}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 }
      },

      {
        "id": 3,
        "title": "🍽️ カテゴリ別店舗数",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (category) (restaurant_count_by_category)",
            "legendFormat": "{{category}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 }
      },

      {
        "id": 4,
        "title": "⭐ 評価分布",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, restaurant_rating_bucket)",
            "legendFormat": "95%ile"
          },
          {
            "expr": "histogram_quantile(0.50, restaurant_rating_bucket)",
            "legendFormat": "Median"
          }
        ],
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 14 }
      },

      {
        "id": 5,
        "title": "📊 API利用状況",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(api_requests_total{endpoint=\"/search\"}[5m])",
            "legendFormat": "検索API"
          },
          {
            "expr": "rate(api_requests_total{endpoint=\"/details\"}[5m])",
            "legendFormat": "詳細API"
          }
        ],
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 14 }
      },

      {
        "id": 6,
        "title": "💎 データ品質指標",
        "type": "gauge",
        "targets": [
          {
            "expr": "data_completeness_percentage",
            "legendFormat": "完全性"
          },
          {
            "expr": "data_accuracy_percentage",
            "legendFormat": "正確性"
          },
          {
            "expr": "data_freshness_percentage",
            "legendFormat": "鮮度"
          }
        ],
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 14 },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "green", "value": 90 }
              ]
            }
          }
        }
      }
    ]
  }
}
