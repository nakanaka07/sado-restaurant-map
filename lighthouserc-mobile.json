{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "url": ["http://localhost/index.html"],
      "numberOfRuns": 3,
      "settings": {
        "formFactor": "mobile",
        "onlyCategories": [
          "performance",
          "accessibility",
          "best-practices",
          "seo"
        ],
        "skipAudits": ["uses-http2"],
        "chromeFlags": "--no-sandbox --disable-gpu --headless=new --disable-dev-shm-usage",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638.4,
          "requestLatencyMs": 562.5,
          "downloadThroughputKbps": 1638.4,
          "uploadThroughputKbps": 675,
          "cpuSlowdownMultiplier": 4
        },
        "throttlingMethod": "simulate",
        "screenEmulation": {
          "mobile": true,
          "width": 412,
          "height": 823,
          "deviceScaleFactor": 2.625,
          "disabled": false
        },
        "emulatedUserAgent": "Mozilla/5.0 (Linux; Android 11; moto g power (2022)) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/109.0.0.0 Mobile Safari/537.36"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.6 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.85 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 4000 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 12000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.15 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 3000 }],
        "speed-index": ["warn", { "maxNumericValue": 6000 }],
        "interactive": ["warn", { "maxNumericValue": 7000 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "mobile-%%PATHNAME%%-%%DATETIME%%.report.%%EXTENSION%%"
    }
  }
}
