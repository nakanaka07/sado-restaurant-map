# Sado Restaurant Map - Environment Variables Template (Clean Architecture)
# Copy this file to .env and configure with your actual values

# === REQUIRED SETTINGS ===

# Google Places API Key
PLACES_API_KEY=your_google_places_api_key_here

# Google Sheets Configuration
SPREADSHEET_ID=your_google_sheets_spreadsheet_id_here

# Google Service Account Authentication
GOOGLE_SERVICE_ACCOUNT_PATH=config/your-service-account-key.json

# === OPTIONAL SETTINGS ===

# API Rate Limiting
API_DELAY=1.0
SHEETS_API_DELAY=1.5

# Processing Configuration
TARGET_DATA=all
DEFAULT_MODE=standard
MAX_WORKERS=3

# Feature Flags (Clean Architecture)
ENABLE_SMART_SKIP=true
ENABLE_LOCATION_SEPARATION=true
DEBUG_MODE=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# === CLEAN ARCHITECTURE SETTINGS ===

# Dependency Injection Container
USE_DI_CONTAINER=true

# Layer Configuration
CORE_LAYER_ENABLED=true
INFRASTRUCTURE_LAYER_ENABLED=true
APPLICATION_LAYER_ENABLED=true

# === SECURITY NOTICE ===
# IMPORTANT: Never commit .env files with actual values
# All sensitive data must be managed through environment variables
# This template should only contain placeholder values
