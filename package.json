{
  "name": "sado-restaurant-map",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --config config/eslint.config.js",
    "lint:fix": "eslint . --config config/eslint.config.js --fix",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest --config config/vitest.config.ts",
    "test:run": "vitest run --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:accessibility": "vitest run src/test/accessibility --config config/vitest.config.ts",
    "test:accessibility:watch": "vitest src/test/accessibility --config config/vitest.config.ts",
    "typecheck": "eslint . --config config/eslint.config.js --max-warnings 0",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true vite build",
    "analyze:dev": "vite-bundle-analyzer",
    "deploy": "pnpm run build && gh-pages -d dist",
    "clean": "rimraf dist dev-dist coverage .vite node_modules/.vite",
    "generate:pwa-assets": "pwa-assets-generator --config config/pwa-assets.config.ts",
    "size-limit": "size-limit"
  },
  "dependencies": {
    "@types/google.maps": "^3.58.1",
    "@vis.gl/react-google-maps": "^1.5.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "@size-limit/file": "^11.1.4",
    "size-limit": "^11.1.4",
    "workbox-core": "^7.3.0",
    "workbox-window": "^7.3.0",
    "@lhci/cli": "^0.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "size-limit": [
    {
      "name": "main",
      "path": "dist/assets/index-*.js",
      "limit": "200 KB"
    },
    {
      "name": "google-maps",
      "path": "dist/assets/google-maps-*.js",
      "limit": "40 KB"
    },
    {
      "name": "app-bundle",
      "path": "dist/assets/App-*.js",
      "limit": "150 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --config config/eslint.config.js --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
