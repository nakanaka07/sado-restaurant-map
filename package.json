{
  "name": "sado-restaurant-map",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=9.0.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --config config/eslint.config.js",
    "lint:fix": "eslint . --config config/eslint.config.js --fix",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest --config config/vitest.config.ts",
    "test:run": "vitest run --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:accessibility": "vitest run src/test/accessibility --config config/vitest.config.ts",
    "test:accessibility:watch": "vitest src/test/accessibility --config config/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "type-check": "tsc --noEmit",
    "analyze": "pnpm build --mode production",
    "deploy": "pnpm build && gh-pages -d dist",
    "clean": "pwsh -Command \"Remove-Item -Path dist,dev-dist,coverage,.vite,node_modules/.vite -Recurse -Force -ErrorAction SilentlyContinue\"",
    "generate:pwa-assets": "pwa-assets-generator --config config/pwa-assets.config.ts",
    "optimize-svg": "node scripts/optimize-svg.js",
    "lighthouse": "pwsh -File scripts/lighthouse-measure.ps1",
    "lighthouse:mobile": "pwsh -File scripts/lighthouse-measure.ps1 -MobileOnly",
    "lighthouse:desktop": "pwsh -File scripts/lighthouse-measure.ps1 -DesktopOnly",
    "lighthouse:quick": "pwsh -File scripts/lighthouse-measure.ps1 -SkipBuild",
    "optimize-images": "node scripts/optimize-images.js",
    "optimize-assets": "pnpm optimize-svg && pnpm optimize-images",
    "size-limit": "size-limit"
  },
  "dependencies": {
    "@types/google.maps": "^3.58.1",
    "@vis.gl/react-google-maps": "^1.7.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "size-limit": "^12.0.0",
    "svgo": "^4.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "workbox-window": "^7.4.0"
  },
  "size-limit": [
    {
      "name": "react-vendor (React + Google Maps)",
      "path": "dist/assets/react-vendor-*.js",
      "limit": "250 KB"
    },
    {
      "name": "data-processing",
      "path": "dist/assets/data-processing-*.js",
      "limit": "40 KB"
    },
    {
      "name": "ui-components",
      "path": "dist/assets/ui-components-*.js",
      "limit": "40 KB"
    },
    {
      "name": "markers",
      "path": "dist/assets/markers-*.js",
      "limit": "20 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --config config/eslint.config.js --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
