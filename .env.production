# ==========================================
# Production Deployment Scripts
# 佐渡飲食店マップ Phase 3-Full 本番環境
# ==========================================

# Production環境変数設定
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key_here
REDIS_PASSWORD=your_secure_redis_password_here
JWT_SECRET=your_jwt_secret_key_here
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# API設定
API_BASE_URL=https://api.sado-restaurant-map.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600

# SSL証明書設定
SSL_CERT_PATH=./ssl/certificate.pem
SSL_KEY_PATH=./ssl/private-key.pem

# バックアップ設定
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sado-restaurant-backup

# 監視設定
PROMETHEUS_RETENTION=90d
GRAFANA_SMTP_HOST=smtp.gmail.com
GRAFANA_SMTP_USER=monitoring@sado-restaurant-map.com

# セキュリティ設定
ALLOWED_ORIGINS=https://sado-restaurant-map.com,https://www.sado-restaurant-map.com
CORS_ENABLED=true

# パフォーマンス設定
REDIS_MAX_MEMORY=2GB
WORKER_CONCURRENCY_HIGH=4
WORKER_CONCURRENCY_NORMAL=6

# ログ設定
LOG_LEVEL=INFO
LOG_MAX_SIZE=200m
LOG_MAX_FILES=5
